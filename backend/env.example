# Server
NODE_ENV=development
PORT=4000
APP_URL=http://localhost:4000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_db?schema=public

# JWT
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-here-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# NextAuth (for frontend integration)
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=your-s3-bucket-name
S3_BUCKET_DOMAIN=https://your-bucket.s3.amazonaws.com

# Email (for magic links)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@example.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Admin
ADMIN_IP_ALLOWLIST=127.0.0.1,::1

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# CORS
CORS_ORIGIN=http://localhost:3000

